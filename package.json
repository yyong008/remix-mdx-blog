{
  "name": "remix-mdx-blog",
  "version": "0.0.1",
  "description": "A light blog usage remix with mdx",
  "keywords": [
    "blog",
    "mdx",
    "react",
    "remix",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yyong008/remix-mdx-blog.git"
  },
  "license": "MIT",
  "author": "Magnesium",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev",
    "lint-staged": "lint-staged",
