    "glob": "^10.3.3",
    "highlight.js": "^11.8.0",
    "isbot": "^3.6.13",
    "mdx-bundler": "^9.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-external-links": "^2.1.0",
    "rehype-highlight": "^6.0.0",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1"
